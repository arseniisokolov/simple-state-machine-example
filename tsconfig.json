{
    "compilerOptions": {
        "target": "esnext",
        "outDir": "./dist/",
        "strictNullChecks": false,
        "moduleResolution": "node",
        "allowJs": false,
        "noEmit": true,
        "strict": false,
        "esModuleInterop": true,
        "jsx": "react",
        "baseUrl": "./src",
        "lib": [
            "es2015",
            "dom.iterable",
            "es2016.array.include",
            "es2017.object",
            "dom"
        ],
        "module": "es6",
        "removeComments": true,
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "resolveJsonModule": true,
    },
    "include": [
        "./src/**/*.*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}